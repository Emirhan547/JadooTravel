@model CreateCategoryDto

@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-plus-circle mr-1"></i> Yeni Kategori Oluştur
                </h3>
            </div>

            <form method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label>Kategori Adı</label>
                        <input asp-for="CategoryName"
                               class="form-control"
                               placeholder="Kategori adı giriniz" />
                    </div>

                    <div class="form-group">
                        <label>İkon (FontAwesome)</label>
                        <input asp-for="IconUrl"
                               class="form-control"
                               placeholder="örn: fa fa-book" />
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description"
                                  class="form-control"
                                  rows="4"
                                  placeholder="Kategori açıklaması"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Durum</label>
                        <select asp-for="Status" class="form-control">
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Kaydet
                    </button>
                    <a href="/Admin/Category/CategoryList"
                       class="btn btn-secondary ml-2">
                        İptal
                    </a>
                </div>
            </form>

        </div>

    </div>
</div>
