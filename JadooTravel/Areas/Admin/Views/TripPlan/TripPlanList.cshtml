
@model List<ResultTripPlanDto>
@{
    ViewData["Title"] = "TripPlanList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <br /> <br />

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İkon Url</th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.IconUrl</td>
                <td><a href="/TripPlan/DeleteTripPlan/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/TripPlan/UpdateTripPlan/@item.Id" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

    </table>

    <a href="/TripPlan/CreateTripPlan/" class="btn btn-info">Yeni Tur Planı Girişi</a>


</div>

