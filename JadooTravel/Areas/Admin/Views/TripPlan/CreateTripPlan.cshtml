@model CreateTripPlanDto

@{
    ViewData["Title"] = "Yeni Tur Planı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-plus-circle mr-1"></i> Yeni Tur Planı Oluştur
                </h3>
            </div>

            <form method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label>Başlık</label>
                        <input asp-for="Title"
                               class="form-control"
                               placeholder="Tur planı başlığı" />
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description"
                                  rows="3"
                                  class="form-control"
                                  placeholder="Tur planı açıklaması"></textarea>
                    </div>

                    <div class="form-group">
                        <label>İkon (FontAwesome)</label>
                        <input asp-for="IconUrl"
                               class="form-control"
                               placeholder="örn: fa fa-map-signs" />
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Kaydet
                    </button>
                    <a href="/Admin/TripPlan/TripPlanList"
                       class="btn btn-secondary ml-2">
                        İptal
                    </a>
                </div>
            </form>

        </div>

    </div>
</div>
