@model CreateFeatureDto

@{
    ViewData["Title"] = "Yeni Feature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-plus-circle mr-1"></i> Yeni Feature Oluştur
                </h3>
            </div>

            <form method="post">
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input asp-for="Title"
                                       class="form-control"
                                       placeholder="Feature başlığı" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Alt Başlık</label>
                                <input asp-for="MainTitle"
                                       class="form-control"
                                       placeholder="Alt başlık" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description"
                                  rows="3"
                                  class="form-control"
                                  placeholder="Feature açıklaması"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Video URL</label>
                        <input asp-for="VideoUrl"
                               class="form-control"
                               placeholder="https://www.youtube.com/..." />
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Kaydet
                    </button>
                    <a href="/Admin/Feature/FeatureList"
                       class="btn btn-secondary ml-2">
                        İptal
                    </a>
                </div>
            </form>

        </div>

    </div>
</div>
