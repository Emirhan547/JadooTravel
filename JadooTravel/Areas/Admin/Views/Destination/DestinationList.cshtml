@model List<ResultDestinationDto>

@{
    ViewData["Title"] = "Turlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">

        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-map-marker-alt mr-1"></i> Tur Listesi
                </h3>

                <div class="card-tools">
                    <a href="/Admin/Destination/CreateDestination" class="btn btn-info btn-sm">
                        <i class="fa fa-plus"></i> Yeni Tur
                    </a>
                </div>
            </div>

            <div class="card-body p-0">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:50px">#</th>
                            <th>Şehir / Ülke</th>
                            <th>Fiyat</th>
                            <th>Gün-Gece</th>
                            <th>Kapasite</th>
                            <th style="width:160px">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CityCountry</td>
                                    <td>@item.Price ₺</td>
                                    <td>@item.DayNight</td>
                                    <td>@item.Capacity</td>
                                    <td>
                                        <a href="/Admin/Destination/UpdateDestination/@item.Id"
                                           class="btn btn-success btn-sm">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a href="/Admin/Destination/DeleteDestination/@item.Id"
                                           class="btn btn-danger btn-sm"
                                           onclick="return confirm('Bu turu silmek istediğinize emin misiniz?')">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted p-4">
                                    Kayıtlı tur bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>

    </div>
</div>
