@model CreateDestinationDto

@{
    ViewData["Title"] = "Yeni Tur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-plus-circle mr-1"></i> Yeni Tur Oluştur
                </h3>
            </div>

            <form method="post">
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Şehir / Ülke</label>
                                <input asp-for="CityCountry"
                                       class="form-control"
                                       placeholder="Örn: Paris / Fransa" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Görsel URL</label>
                                <input asp-for="ImageUrl"
                                       class="form-control"
                                       placeholder="Görsel yolu giriniz" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Fiyat</label>
                                <input asp-for="Price"
                                       class="form-control"
                                       placeholder="₺" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Gün / Gece</label>
                                <input asp-for="DayNight"
                                       class="form-control"
                                       placeholder="3 Gün 2 Gece" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Kapasite</label>
                                <input asp-for="Capacity"
                                       class="form-control"
                                       placeholder="Kişi sayısı" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description"
                                  rows="4"
                                  class="form-control"
                                  placeholder="Tur açıklaması"></textarea>
                    </div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Kaydet
                    </button>
                    <a href="/Admin/Destination/DestinationList"
                       class="btn btn-secondary ml-2">
                        İptal
                    </a>
                </div>
            </form>

        </div>

    </div>
</div>
