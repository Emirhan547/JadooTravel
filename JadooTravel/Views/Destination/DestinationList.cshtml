@model List<ResultDestinationDto>
@{
    ViewData["Title"] = "DestinationList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="container">
    <br /> <br />

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Tur Şehir Ülke</th>
            <th>Tur Fiyatı</th>
            <th>Tur Kapasitesi</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count.</td>
                <td>@item.CityCountry</td>
                <td>@item.Price</td>
                <td>@item.Capacity</td>
                <td><a href="/Destination/DeleteDestination/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Destination/UpdateDestination/@item.Id" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>

    <a href="/Destination/CreateDestination/" class="btn btn-info">Yeni Tur Girişi</a>

</div>

