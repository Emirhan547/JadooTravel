@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="container">
    <br /> <br />

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Durum</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>@item.IconUrl</td>
                <td>@(item.Status ? "Var" : "Yok")</td>
                <td><a href="/Category/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@item.Id" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

    </table>

    <a href="/Category/CreateCategory/" class="btn btn-info">Yeni Kategori Girişi</a>


</div>

