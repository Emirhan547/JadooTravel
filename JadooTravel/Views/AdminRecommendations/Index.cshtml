@{
    ViewData["Title"] = "Seyahat Önerileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Yapay Zeka Destekli Seyahat Önerileri</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Gezilecek Yerler için Öneriler Alın</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="GetRecommendations">
                        <div class="mb-3">
                            <label for="cityCountry" class="form-label">Şehir veya Ülke Adı</label>
                            <input type="text" class="form-control" id="cityCountry" name="cityCountry"
                                   placeholder="Örn: Paris, Fransa veya İstanbul, Türkiye" required>
                            <small class="form-text text-muted">
                                Gezilecek yerleri öğrenmek istediğiniz şehir veya ülke adını girin.
                            </small>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="ti ti-search"></i> Önerileri Getir
                        </button>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-4" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    @if (ViewBag.Recommendations != null)
                    {
                        <div class="mt-5">
                            <h4 class="mb-3">
                                <i class="ti ti-map-pin text-danger"></i>
                                @ViewBag.CityCountry için Öneriler
                            </h4>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div style="white-space: pre-wrap; line-height: 1.8;">
                                        @ViewBag.Recommendations
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h5 class="card-title text-info">
                        <i class="ti ti-info-circle"></i> Bilgi
                    </h5>
                    <p class="card-text">
                        Bu sistem yapay zeka kullanarak belirlediğiniz şehir veya ülkedeki
                        gezilmesi gereken önemli yerleri listeler. Seyahat planlarınızı
                        yaparken size rehberlik edecek öneriler sunar.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form submit animation
        document.querySelector('form').addEventListener('submit', function() {
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Yükleniyor...';
            btn.disabled = true;
        });
    </script>
}