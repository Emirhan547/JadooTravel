
@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <br /> <br />

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>İsim Soyisim </th>
            <th>Yorum</th>
            <th>Görsel Linki</th>
            <th>Başlık</th>
            <th></th>
  
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count.</td>
                <td>@item.NameSurname</td>
                <td>@item.Comment</td>
                <td>@item.ImageUrl</td>
                <td>@item.JobTitle</td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>

    <a href="/Testimonial/CreateTestimonial/" class="btn btn-info">Yeni Testimonial Girişi</a>

</div>


