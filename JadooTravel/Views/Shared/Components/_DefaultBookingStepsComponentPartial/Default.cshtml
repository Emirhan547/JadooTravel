@model List<ResultTripPlanDto>

<section id="booking">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="mb-4 text-start">
                    <h5 class="text-secondary">Easy And Fast Booking</h5>
                    <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize">
                        @Model.Count Complete Booking Steps
                    </h3>
                </div>

                @{
                    var colors = new[] { "primary", "danger", "info", "success" };
                }

                @for (int i = 0; i < Model.Take(4).Count(); i++)
                {
                    var item = Model[i];
                    <div class="d-flex align-items-start mb-5">
                        <div class="bg-@colors[i % colors.Length] me-sm-4 me-3 p-3" style="border-radius: 13px">
                            <img src="@item.IconUrl" width="22" alt="@item.Title" />
                        </div>
                        <div class="flex-1">
                            <h5 class="text-secondary fw-bold fs-0">@item.Title</h5>
                            <p>@item.Description</p>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-6 d-flex justify-content-center align-items-start">
                <div class="card shadow-lg border-info" style="width: 100%; max-width: 500px;">
                    <div class="card-header bg-info text-white text-center">
                        <h5 class="mb-0">Booking Form</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/Booking/CreateBooking">
                            <div class="mb-3">
                                <input type="text"
                                       name="FullName"
                                       class="form-control"
                                       placeholder="Full Name"
                                       required />
                            </div>

                            <div class="mb-3">
                                <input type="tel"
                                       name="Phone"
                                       class="form-control"
                                       placeholder="Phone"
                                       required />
                            </div>

                            <div class="mb-3">
                                <input type="email"
                                       name="Email"
                                       class="form-control"
                                       placeholder="Email"
                                       required />
                            </div>

                            <div class="mb-3">
                                <textarea rows="3"
                                          name="MessageBody"
                                          class="form-control"
                                          placeholder="Message"></textarea>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-info">
                                    Book Now
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
